<% content_for :head do %>
  <title>Pomodoro</title>
<% end%>

<script type="text/x-handlebars" data-template-name="appView">
  <div id="time">{{timer.time}}</div>
  {{#view Pomodoro.ToggleButton id="toggle"
      classBinding="timer.status" }}
    {{#if timer.isRunning }}
      Stop timer
    {{else}}
      Start timer
    {{/if}}
  {{/view}}
  {{#view Pomodoro.NotificationsButton id="enable-notifications"}}
    Enable desktop notifications
  {{/view}}
</script>

<%= javascript_include_tag 'application' %>
