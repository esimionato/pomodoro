<% content_for :head do %>
  <title>Pomodoro</title>
<% end%>

<script type="text/x-handlebars">
  <div id="time">{{Pomodoro.currentTimer.time}}</div>
  {{#view Pomodoro.ToggleButton id="toggle"
      classBinding="Pomodoro.currentTimer.status" }}
    {{#if Pomodoro.currentTimer.isRunning }}
      Stop timer
    {{else}}
      Start timer
    {{/if}}
  {{/view}}
  {{#view Pomodoro.NotificationsButton id="enable-notifications"}}
    Enable desktop notifications
  {{/view}}
</script>

<%= javascript_include_tag 'application' %>
